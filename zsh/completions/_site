#compdef site
# Watson's zsh completion script for the site function
# Author: wtsnjp
# Website: https://wtsnjp.com
# Source: https://github.com/wtsnjp/dotfiles

function _site() {
  _arguments -C \
    '1: :__site_commands' \
    '*:: :->args' && return 0
}

function __site_commands() {
  local -a _c
  _c=(
    'preview:preview the site'
    'update:just update the site'
  )
  _describe -t commands 'commands' _c
}

_site "$@"

# vim: ft=zsh:
